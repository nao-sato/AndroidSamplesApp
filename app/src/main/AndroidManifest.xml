<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ktAndroidSample">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".SampleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KtAndroidSample">
        <activity android:name=".room.view.RoomActivity"></activity>
        <activity android:name=".viewPager2.ViewPager2Activity" />
        <activity android:name=".recyclerView.RecyclerViewActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mediaPlayer.MediaPlayerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".service.ServiceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".picker.PickerActivity"
            android:screenOrientation="portrait" />

        <service
            android:name=".service.MyService"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>